.img_container {
  width: 750rpx;
}

.img_col1 {
  width: 350rpx;
  margin: 10rpx 10rpx 0 15rpx; /*上右下左*/
  display: inline-block;
  vertical-align: top;
}

.img_col2 {
  width: 350rpx;
  margin: 10rpx 15rpx 0 10rpx;
  display: inline-block;
  vertical-align: top;
}

.img_col_item {
  margin: 15rpx 0 0 0;
  border-radius: 5%;
  background-color: #fff;
  border-width: 1px;
}
.img_cell{
  display: flex;
  padding:10rpx;
  align-items: center;
}

.user_avatar {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx 0 0;
  border-radius: 50%;
}

.user_nickname {
  display: inline-block;
  flex:1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user_location {
  display: inline-block;
  color: #e74552;
}

.item_description {
  display: inline-block;
  vertical-align: middle;
  width: 340rpx;
  margin: 0 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item_price{
  display:inline-block;
  margin:0 5rpx 10rpx 10rpx;
  font-weight: bold;
  color:#FF4F64;

}

.item_price_before{
  display:inline-block;
  flex:1;
  margin:0 10rpx 10rpx 0;
  font-size: 10px;
  text-decoration:line-through;
  color:#B2B2B2;
}

.item_date{
  display:inline-block;
  text-align:right;
  margin:0 5rpx 10rpx 0;
  font-size: 10px;
  color:#B2B2B2;
}

.loading {
  display: inline-block;
  margin-right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  animation: a 1s linear infinite;
}

@keyframes a {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(1turn);
    transform: rotate(1turn);
  }
}
